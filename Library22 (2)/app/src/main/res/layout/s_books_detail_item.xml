<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        android:background="@drawable/flower2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="2dip"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="책제목"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:paddingBottom="20dp"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="19dp"
                android:layout_height="wrap_content">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:alpha="0.7"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:textColor="#5d5d5d"
                        android:textStyle="bold"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:layout_below="@+id/title_info"
                        android:text="작가"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="13dp" />
                    <TextView
                        android:id="@+id/author_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:layout_below="@+id/title_info"
                        android:text="작가"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="13dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:layout_weight="3"
                        android:textColor="#5d5d5d"
                        android:textStyle="bold"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:text="출판사"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_below="@+id/author_info"
                        android:layout_marginTop="13dp"
                        />
                    <TextView
                        android:id="@+id/pub_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:text="출판사"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_below="@+id/author_info"
                        android:layout_marginTop="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="도서관"
                        android:background="@color/colorPrimary"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"
                        android:layout_below="@+id/pub_info" />
                    <TextView
                        android:id="@+id/manage_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:textColor="#000000"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textStyle="bold"
                        android:text="도서관"
                        android:textSize="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_below="@+id/pub_info" />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="도서관 정보 더보기"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:id="@+id/button_lib"
                        android:background="@color/colorGray"
                        />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#5d5d5d"
                        android:textStyle="bold"
                        android:paddingBottom="2dip"
                        android:paddingTop="6dip"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:background="@color/colorPrimary"
                        android:text="도서 정보 웹 주소"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="15dp"
                        android:layout_marginTop="13dp"
                        android:layout_below="@+id/manage_code"
                        />
                    <TextView
                        android:id="@+id/detaillink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingBottom="12dip"
                        android:paddingTop="6dip"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:text="웹주소"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textSize="15dp"
                        android:textColorLink="#000000"

                        android:layout_below="@+id/manage_code"
                        />
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@drawable/selector_bottombar_item"
        app:itemTextColor="@drawable/selector_bottombar_item"
        app:menu="@menu/bottom_navigation_main" >

    </android.support.design.widget.BottomNavigationView>
</RelativeLayout>